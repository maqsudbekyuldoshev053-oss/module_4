container, image, network, volume


docker ps                # ishlab turgan containerlarni korish
docker ps -a             # barcha containerlarni korish
docker restart container_id | container_name #  ishlab turgan containerni restart qiladi
docker start container_id | container_name # start qilish
docker stop container_id | container_name # stop qilish
docker rm container_id | container_name # remove qilish

docker run --name my_postgres -e POSTGRES_PASSWORD=1 -p 5432:5432 -d postgres:alpine -"database tyaratish"
docker rm my_postgres - uchirish
